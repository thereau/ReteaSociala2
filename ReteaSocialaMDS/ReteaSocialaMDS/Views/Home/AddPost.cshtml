@model ReteaSocialaMDS.Models.Post
@using (Html.BeginForm("AddPost","Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Wall</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(m => m.PostMessage, new { @class = "col-md-2 control-label" })
            </div>
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.PostMessage, new { @class = "form-control", @style = "width:100%"})

            </div>
            <div class="col-md-3">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

            

    </div>
}